[
    {
        "key": "python.pythonPath",
        "title": "Python Interpreter",
        "type": "enum",
        "resolve": "python.resolveEnvs",
        "allowCustom": true
    },
    {
        "title": "Set as built-in interpreter",
        "description": "Other extensions (including the Python Debug tasks) may use the built-in python.interpreter setting.",
        "type": "command",
        "command": "python.copyInterpreter"
    },
    {
        "type": "section",
        "title": "Language Server",
        "children": [
            {
                "key": "python.langServerEnabled",
                "title": "Enable language server",
                "description": "Whether to enable the configured language server for this project.",
                "type": "boolean",
                "default": true
            },
            {
                "key": "python.langServer",
                "title": "Language Server",
                "description": "Which language server to prefer by default.",
                "type": "enum",
                "values": [
                    ["pyright-langserver", "Pyright"],
                    ["pyrefly", "Pyrefly"],
                    ["ty", "ty"]
                ]
            },
            {
                "key": "python.langServerPath",
                "title": "Executable",
                "description": "Path to the language server executable.",
                "type": "path",
                "placeholder": "(auto)"
            }
        ]
    },
    {
        "type": "section",
